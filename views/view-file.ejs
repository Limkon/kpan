<%# views/view-file.ejs %>
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>查看文件: <%= filename %></title>
    <link rel="stylesheet" href="/style.css">
    <link id="theme-stylesheet" rel="stylesheet" href="">
    <style>
        /* [最終修正] 使用絕對定位 */
        body {
            position: relative; /* 關鍵：為絕對定位的子元素提供定位上下文 */
            padding-top: 50px;  /* 關鍵：為頂部留出空間，防止內容被選擇器遮擋 */
        }

        .theme-switcher-container {
            position: absolute;   /* 使用絕對定位 */
            top: 15px;            /* 距離頂部 15px */
            right: 2.5%;          /* 距離右側 2.5%，與下方 container 的邊緣對齊 */
            z-index: 1000;        /* 確保它在最上層 */
        }
        
        body, html { margin: 0; }

        .container {
            padding: 15px; max-width: 95%; width: 100%; margin-left: auto; margin-right: auto;
        }

        .viewer-header { 
            display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;
        }
        .header-actions { display: flex; gap: 10px; }
        .viewer-title { margin-bottom: 15px; }

        pre {
            background-color: #f8f9fa; border: 1px solid #dee2e6; padding: 15px;
            border-radius: 5px; white-space: pre-wrap; word-break: break-all;
            font-size: 1rem; line-height: 1.6; font-family: 'SimSun', '宋体', 'STSong', serif;
        }
        body.dark-theme pre {
            background-color: #2c2c2c; border-color: #444; color: #e0e0e0;
        }
    </style>
</head>
<body>

    <div class="theme-switcher-container">
        <%- include("partials/theme-switcher") %>
    </div>
    
    <div class="container">
        <% if (message) { %>
            <div class="message <%= messageType === 'error' ? 'error-message' : '' %>">
                <%= message %>
            </div>
        <% } %>

        <div class="viewer-header">
            <% const parentPath = currentPath.substring(0, currentPath.lastIndexOf('/')) || '/'; %>
            <a href="/files?path=<%= encodeURIComponent(parentPath) %><%= viewTargetUsername ? '&targetUsername=' + encodeURIComponent(viewTargetUsername) : '' %>" class="button-link">&larr; 返回文件列表</a>
            
            <div class="header-actions">
                <% if (ALLOWED_TEXT_EXTENSIONS.includes(fileExtension)) { %>
                    <a href="/edit?path=<%= encodeURIComponent(currentPath) %><%= viewTargetUsername ? '&targetUsername=' + encodeURIComponent(viewTargetUsername) : '' %>" class="button-link">編輯文件</a>
                <% } %>
                <a href="/download?path=<%= encodeURIComponent(currentPath) %><%= viewTargetUsername ? '&targetUsername=' + encodeURIComponent(viewTargetUsername) : '' %>" class="button-link" download>下載文件</a>
            </div>
        </div>

        <div class="viewer-title">
            <h2>正在查看: <%= filename %></h2>
        </div>

        <pre><%= content %></pre>
    </div>

    <script src="/theme.js"></script>
</body>
</html>

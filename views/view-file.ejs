<%# views/view-file.ejs %>
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>查看文件: <%= filename %></title>
    <link rel="stylesheet" href="/style.css">
    <link id="theme-stylesheet" rel="stylesheet" href="">
    <style>
        /* [修正] 主題選擇器容器樣式 */
        .theme-switcher-container {
            /* 讓容器佔滿寬度，僅用 padding 控制左右邊距以對齊內容 */
            padding: 10px 2.5% 0; /* 2.5% 與下方 95% 寬度的 container 邊距匹配 */
            text-align: right;      /* 將內部元素推到容器最右邊 */
            box-sizing: border-box;
        }

        /* 確保 .container 的頂部內邊距被調整，以避免雙重邊距 */
        .container {
            padding-top: 0;
        }

        /* 頁面頂部佈局 */
        .viewer-header { 
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            margin-top: 15px;
        }
        .header-actions {
            display: flex;
            gap: 10px;
        }
        .viewer-title {
            margin-bottom: 15px;
        }

        /* 為文件預覽區域設定字體 */
        pre {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            padding: 15px;
            border-radius: 5px;
            white-space: pre-wrap;
            word-break: break-all;
            font-size: 1rem;
            line-height: 1.6;
            font-family: 'SimSun', '宋体', 'STSong', serif;
        }
        /* 優化暗色主題下的預覽區樣式 */
        body.dark-theme pre {
            background-color: #2c2c2c;
            border-color: #444;
            color: #e0e0e0;
        }
    </style>
</head>
<body>

    <div class="theme-switcher-container">
        <%- include("partials/theme-switcher") %>
    </div>

    <div class="container">
        <% if (message) { %>
            <div class="message <%= messageType === 'error' ? 'error-message' : '' %>">
                <%= message %>
            </div>
        <% } %>

        <div class="viewer-header">
            <% const parentPath = currentPath.substring(0, currentPath.lastIndexOf('/')) || '/'; %>
            <a href="/files?path=<%= encodeURIComponent(parentPath) %><%= viewTargetUsername ? '&targetUsername=' + encodeURIComponent(viewTargetUsername) : '' %>" class="button-link">&larr; 返回文件列表</a>
            
            <div class="header-actions">
                <% if (ALLOWED_TEXT_EXTENSIONS.includes(fileExtension)) { %>
                    <a href="/edit?path=<%= encodeURIComponent(currentPath) %><%= viewTargetUsername ? '&targetUsername=' + encodeURIComponent(viewTargetUsername) : '' %>" class="button-link">編輯文件</a>
                <% } %>
                <a href="/download?path=<%= encodeURIComponent(currentPath) %><%= viewTargetUsername ? '&targetUsername=' + encodeURIComponent(viewTargetUsername) : '' %>" class="button-link" download>下載文件</a>
            </div>
        </div>

        <div class="viewer-title">
            <h2>正在查看: <%= filename %></h2>
        </div>

        <pre><%= content %></pre>
    </div>
    <script src="/theme.js"></script>
</body>
</html>

<%# views/admin.ejs %>
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>管理面板 - 網路硬碟</title>
    <link rel="stylesheet" href="/style.css">
    <link id="theme-stylesheet" rel="stylesheet" href="">
    <%# 已移除內嵌 <style> 區塊，樣式由 /style.css 和主題CSS控制 %>
</head>
<body>
    <div class="container">
        <header>
            <h1>管理面板</h1>
            <div class="header-controls">
                <nav>
                    <%# 將頁首導覽連結修改為按鈕樣式 %>
                    <a href="/files" class="button-link">我的文件</a>
                    <a href="/change-password" class="button-link">修改密碼</a>
                    <a href="/logout" class="button-link">登出</a>
                </nav>
                <%- include('partials/theme-switcher') %>
            </div>
        </header>

        <% if (locals.message) { %>
            <p class="message <%= locals.messageType === 'error' ? 'error-message' : (locals.messageType === 'success' ? '' : 'warning-message') %>"><%= message %></p>
        <% } %>

        <h2>用戶管理</h2>
        <div class="admin-table-container">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>用戶名</th>
                        <th>角色</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><a href="/files?targetUsername=<%= encodeURIComponent(user.username) %>" title="查看 <%= user.username %> 的文件"><%= user.username %></a></td>
                            <td><%= user.role %></td>
                            <td class="actions">
                                <% if (currentUser.id !== user.id) { %>
                                    <form action="/admin/reset-password/<%= user.id %>" method="POST" onsubmit="return confirm('確定要重置用戶 <%= user.username %> 的密碼嗎？');">
                                        <% if (locals.csrfToken) { %><input type="hidden" name="_csrf" value="<%= csrfToken %>"><% } %>
                                        <input type="password" name="newPassword" placeholder="新密碼" required>
                                        <button type="submit">重置密碼</button> <%# 此按鈕將套用 public/style.css 中的 button 和 table td form button 樣式 %>
                                    </form>
                                    <a href="/admin/delete/<%= user.id %>" class="button-link secondary" onclick="return confirm('確定要刪除用戶 <%= user.username %> 及其所有文件嗎？此操作不可恢復！');">刪除用戶</a>
                                <% } else { %>
                                    (當前用戶)
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <h2>新增用戶</h2>
        <form action="/admin/add-user" method="POST" class="control-form"> <%# 可以考慮添加 control-form 類以統一表單佈局 %>
            <% if (locals.csrfToken) { %><input type="hidden" name="_csrf" value="<%= csrfToken %>"><% } %>
            <div class="form-group">
                <label for="newUsername">新用戶名:</label>
                <input type="text" id="newUsername" name="newUsername" required>
            </div>
            <div class="form-group">
                <label for="newPassword">新密碼:</label>
                <input type="password" id="newPassword" name="newPassword" required>
            </div>
            <div class="form-group">
                <label for="confirmNewPassword">確認新密碼:</label>
                <input type="password" id="confirmNewPassword" name="confirmNewPassword" required>
            </div>
            <div class="form-group">
                <label for="role">角色:</label>
                <select id="role" name="role">
                    <option value="user" selected>User</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
            <button type="submit">新增用戶</button> <%# 此按鈕將套用 public/style.css 中的 button 樣式 %>
        </form>
    </div>
    <script src="/theme.js"></script>
</body>
</html>

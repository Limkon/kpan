                         currentPathInput.value = itemOriginalPath.substring(0, itemOriginalPath.lastIndexOf('/')) || '/';
                    } else if (currentPathInput) { 
                        currentPathInput.value = CURRENT_PATH_ON_LOAD;
                    }
                }
            }
        }

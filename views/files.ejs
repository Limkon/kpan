                    const currentPathInput = formContainer.querySelector('input[name="currentPath"]');
                    const oldPathInput = formContainer.querySelector('input[name="oldPath"]');
                    if (currentPathInput && oldPathInput && IS_SEARCH_RESULT_VIEW) {

                                        else if (['xls', 'xlsx'].includes(ext)) { largeIcon = 'ğŸ“Š';}
                                        else if (['ppt', 'pptx'].includes(ext)) { largeIcon = 'ğŸ–¥ï¸';}
                                        else if (['zip', 'rar', 'tar', 'gz'].includes(ext)) { largeIcon = 'ğŸ“¦';}
                                        else if (['mp3', 'wav', 'ogg', 'aac'].includes(ext)) { largeIcon = 'ğŸµ';}

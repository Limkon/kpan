            function renderDirectoryTree(nodes, container, itemsToMovePaths, currentLevelPath = '/') { /* ... (ä¸ä¹‹å‰ç‰ˆæœ¬ç›¸åŒ) ... */ 
                container.innerHTML = ''; const ul = document.createElement('ul');

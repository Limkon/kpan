                if (event.target == videoPlayerModal) { // æ–°å¢: é»æ“Šæ¨¡æ…‹æ¡†å¤–éƒ¨é—œé–‰è¦–é »æ’­æ”¾å™¨
                     if (videoPlayerModal) videoPlayerModal.style.display = 'none';
                    if (html5VideoPlayer) {
                        html5VideoPlayer.pause();
                        videoSourceElement.setAttribute('src', '');

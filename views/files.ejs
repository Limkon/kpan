            function updateFileListPreview(files, inputType) { // inputType: 'files' or 'folder'
                if (!fileListPreview) return;
                fileListPreview.innerHTML = '';
                const uploadButton = document.getElementById('upload-button'); 
                
                if (!files || files.length === 0) {
                    if(uploadButton) uploadButton.style.display = 'none';
                    return;
                }

                const list = document.createElement('ul');
                list.style.listStyleType = 'none'; list.style.paddingLeft = '0';
                
                console.log(`updateFileListPreview: Input type: ${inputType}, Files count: ${files.length}`);
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    console.log(`  File ${i}: name="${file.name}", webkitRelativePath="${file.webkitRelativePath}", size=${file.size}, type="${file.type}"`);
                }

                if (inputType === 'folder' && files[0] && files[0].webkitRelativePath && files[0].webkitRelativePath.includes('/')) {
                    const folderName = files[0].webkitRelativePath.split('/')[0];
                    const listItem = document.createElement('li');
                    listItem.textContent = `文件夾: ${folderName} (${files.length} 個文件)`;
                    listItem.style.fontSize = '0.9em';
                    listItem.style.fontWeight = 'bold';
                    list.appendChild(listItem);
                } else { 
                    for (let i = 0; i < files.length; i++) {
                        const listItem = document.createElement('li');
                        listItem.textContent = files[i].name + (files[i].size ? ` (${(files[i].size / 1024).toFixed(1)} KB)` : '');
                        listItem.style.fontSize = '0.9em';
                        list.appendChild(listItem);
                    }
                }
                fileListPreview.appendChild(list);
                if(uploadButton) uploadButton.style.display = 'inline-block';
            }
            
            if(userFilesForFilesInput) {
                userFilesForFilesInput.addEventListener('change', function(event) {
                    console.log("Input 'userFiles-files' changed. Files selected:", event.target.files.length);
                    updateFileListPreview(event.target.files, 'files');
                    if (userFilesForFolderInput) userFilesForFolderInput.value = ''; // 清空另一个
                });
            }
            if(userFilesForFolderInput) {
                userFilesForFolderInput.addEventListener('change', function(event) {
                    console.log("Input 'userFiles-folder' changed. Files selected:", event.target.files.length);
                    updateFileListPreview(event.target.files, 'folder');
                    if (userFilesForFilesInput) userFilesForFilesInput.value = ''; // 清空另一个
                });
            }
            
            if (uploadForm) {
                uploadForm.addEventListener('submit', function(event) {
                    event.preventDefault(); 
                    
                    let filesToUpload = null;
                    // 确定实际哪个 input 有文件，优先文件夹选择
                    if (userFilesForFolderInput && userFilesForFolderInput.files.length > 0) {
                        filesToUpload = userFilesForFolderInput.files;
                        console.log("Uploading from folder input.");
                    } else if (userFilesForFilesInput && userFilesForFilesInput.files.length > 0) {
                        filesToUpload = userFilesForFilesInput.files;
                        console.log("Uploading from files input.");
                    }

                    if (!filesToUpload || filesToUpload.length === 0) {
                        alert('請選擇要上傳的文件或文件夾。');
                        return;
                    }

                    const formData = new FormData(); 
                    
                    const currentPathHiddenInput = uploadForm.querySelector('input[name="currentPath"]');
                    if (currentPathHiddenInput) formData.append('currentPath', currentPathHiddenInput.value);

                    const targetUsernameHiddenInput = uploadForm.querySelector('input[name="targetUsername"]');
                    if (targetUsernameHiddenInput && targetUsernameHiddenInput.value) formData.append('targetUsername', targetUsernameHiddenInput.value);
                    
                    if (CSRF_TOKEN) { 
                        formData.append('_csrf', CSRF_TOKEN);
                    }

                    console.log("FormData initial fields (currentPath, targetUsername, _csrf):");
                    for (let [key, value] of formData.entries()) { console.log(`  ${key}: ${value}`); }

                    console.log(`Total files to append to FormData: ${filesToUpload.length}`);
                    for (let i = 0; i < filesToUpload.length; i++) {
                        const file = filesToUpload[i];
                        formData.append('userFiles', file, file.webkitRelativePath || file.name); // 使用 webkitRelativePath (如果存在) 或 file.name
                        console.log(`Appending file to FormData: name="${file.name}", webkitRelativePath="${file.webkitRelativePath}", size=${file.size}, type="${file.type}"`);
                    }
                    
                    console.log("FormData entries after appending files:");
                     for (let [key, value] of formData.entries()) {
                        if (value instanceof File) {
                            console.log(`  ${key}: File { name: "${value.name}", size: ${value.size}, type: "${value.type}", webkitRelativePath: "${value.webkitRelativePath}" }`);
                        } else {
                            console.log(`  ${key}: ${value}`);
                        }
                    }

                    const xhr = new XMLHttpRequest();
                    xhr.open('POST', uploadForm.action, true);
                    
                    if (uploadProgressContainer && uploadProgressBar) {
                        uploadProgressContainer.style.display = 'block';
                        uploadProgressBar.style.width = '0%';
                        uploadProgressBar.textContent = '0%';
                    }
                    xhr.upload.onprogress = function(event) {
                        if (event.lengthComputable) {
                            const percentComplete = Math.round((event.loaded / event.total) * 100);
                            if (uploadProgressBar) {
                                uploadProgressBar.style.width = percentComplete + '%';
                                uploadProgressBar.textContent = percentComplete + '%';
                            }
                        }
                    };
                    xhr.onload = function() {
                        if (uploadProgressContainer) uploadProgressContainer.style.display = 'none';
                        console.log("XHR Upload onload. Status:", xhr.status, "ResponseURL:", xhr.responseURL, "ResponseText (first 200 chars):", xhr.responseText.substring(0, 200));
                        if (xhr.status >= 200 && xhr.status < 400) { 
                            if (xhr.responseURL && xhr.responseURL !== uploadForm.action && xhr.responseURL.includes('/files')) { 
                                console.log("XHR detected redirect to files page, navigating...");
                                window.location.href = xhr.responseURL; 
                            } else {
                                console.log("XHR success, but no clear redirect to /files or responseURL same as action. Reloading.");
                                window.location.reload();
                            }
                        } else {
                            let errorMessage = `上傳失敗。伺服器響應: ${xhr.status}`;
                            try {
                                const responseJson = JSON.parse(xhr.responseText);
                                if (responseJson && responseJson.message) {
                                    errorMessage = responseJson.message;
                                }
                            } catch (e) {
                                if(xhr.responseText) errorMessage = xhr.responseText;
                            }
                            alert(errorMessage);
                            console.error('Upload failed through XHR:', xhr.status, xhr.responseText);
                        }
                    };
                    xhr.onerror = function(e) { 
                        if (uploadProgressContainer) uploadProgressContainer.style.display = 'none';
                        alert('上傳過程中發生網絡錯誤。請檢查網絡連接和服務器狀態。');
                        console.error('Upload network error (xhr.onerror):', e, "Status:", xhr.status, "StatusText:", xhr.statusText);
                    };
                    console.log("使用 XHR 發送上傳數據...");
                    xhr.send(formData);
                });
            }
            

        }

        .rename-form { display: none; position: absolute; left: 25px; right: 5px; top: calc(100% + 2px); background-color: var(--rename-form-bg); padding: 10px; border: 1px solid var(--rename-form-border-color); box-shadow: 0 4px 10px rgba(0,0,0,0.15); z-index: 100; border-radius: 6px; max-width: 400px; box-sizing: border-box; }
        #file-container.grid-view li .rename-form { left: 50%; transform: translateX(-50%); top: 100%; margin-top: 5px; width: calc(100% - 10px); max-width: 180px; right: auto; }
        .rename-form form.inline-form { display: flex; gap: 8px; align-items: stretch; }
        .rename-form input[type="text"], .rename-form button { box-sizing: border-box; font-size: 0.9em; line-height: 1.4; padding-top: 6px; padding-bottom: 6px; border-radius: 4px; margin: 0; }

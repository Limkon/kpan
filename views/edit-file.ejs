<%# views/edit-file.ejs %>
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>编辑文件: <%= filename %></title>
    <link rel="stylesheet" href="/style.css">
    <link id="theme-stylesheet" rel="stylesheet" href="">

    <style>
        /* [最終修正] 使用絕對定位 */
        body {
            position: relative; /* 關鍵：為絕對定位的子元素提供定位上下文 */
            padding-top: 50px;  /* 關鍵：為頂部留出空間，防止內容被選擇器遮擋 */
        }

        .theme-switcher-container {
            position: absolute;   /* 使用絕對定位 */
            top: 15px;            /* 距離頂部 15px */
            right: 2.5%;          /* 距離右側 2.5%，與下方 container 的邊緣對齊 */
            z-index: 1000;        /* 確保它在最上層 */
        }
        
        /* 移除 body, html 的 height 和 display:flex，簡化佈局 */
        body, html {
            margin: 0;
        }

        /* 調整 container 的佈局 */
        .container {
            padding: 15px;
            max-width: 95%; width: 100%; margin-left: auto; margin-right: auto;
            /* 由於 body 已有 padding-top，這裡不再需要額外的 margin-top */
            display: flex; flex-direction: column; flex-grow: 1;
        }
        main-content { /* 創建一個新的包裹元素來處理 flex 佈局 */
            display: flex; flex-direction: column; min-height: calc(100vh - 50px);
        }

        form {
            flex-grow: 1; display: flex; flex-direction: column;
        }
        .editor-header {
            margin-bottom: 15px;
        }
        .editor-actions {
            margin-top: 15px; text-align: right; flex-shrink: 0;
            display: flex; justify-content: flex-end; gap: 10px;
        }

        textarea#fileContent {
            flex-grow: 1; width: 100%; padding: 10px; box-sizing: border-box;
            border: 1px solid #ced4da; border-radius: 5px; font-size: 1rem;
            line-height: 1.6; font-family: 'SimSun', '宋体', 'STSong', serif;
            min-height: 400px; /* 建議為 textarea 添加一個最小高度 */
        }

        body.dark-theme textarea#fileContent {
            border-color: #555; background-color: #2c2c2c; color: #e0e0e0;
        }
    </style>
</head>
<body>

    <div class="theme-switcher-container">
        <%- include("partials/theme-switcher") %>
    </div>
    
    <main-content>
        <div class="container">
            <% if (message) { %>
                <div class="message <%= messageType === 'error' ? 'error-message' : '' %>">
                    <%= message %>
                </div>
            <% } %>

            <div class="editor-header">
                 <% const parentPath = currentPath.substring(0, currentPath.lastIndexOf('/')) || '/'; %>
                 <a href="/files?path=<%= encodeURIComponent(parentPath) %><%= viewTargetUsername ? '&targetUsername=' + encodeURIComponent(viewTargetUsername) : '' %>" class="button-link">&larr; 返回文件列表</a>
                <h2>正在编辑: <%= filename %></h2>
            </div>

            <form action="/save/<%= encodeURIComponent(currentPath) %>" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% if (viewTargetUsername) { %>
                    <input type="hidden" name="targetUsername" value="<%= viewTargetUsername %>">
                <% } %>
                
                <textarea id="fileContent" name="fileContent"><%= content %></textarea>

                <div class="editor-actions">
                    <button type="submit">保存更改</button>
                    <% const viewUrl = `/view?path=${encodeURIComponent(currentPath)}${viewTargetUsername ? '&targetUsername=' + encodeURIComponent(viewTargetUsername) : ''}`; %>
                    <button type="button" onclick="window.location.href='<%= viewUrl %>'">取消</button>
                </div>
            </form>
        </div>
    </main-content>
    
    <script src="/theme.js"></script>
    
</body>
</html>
